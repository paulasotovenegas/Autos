<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrontEnd.API</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/font-awesome.css" />
    <link rel="stylesheet" href="~/css/normalize.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link href="img/car.svg" rel="icon">
    @RenderSection("Links", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-secondary text-white">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <h1><img src="~/img/car.svg" height="48px" alt=""></h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mb-2 mb-lg-0 font">
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Autos" asp-action="Index">Autos</a>
                            </li>
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Combustible" asp-action="Index">Combustible</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Estado" asp-action="Index">Estado</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Marcas" asp-action="Index">Marcas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Modelos" asp-action="Index">Modelos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="TiposAutos" asp-action="Index">TiposAutos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Transmisiones" asp-action="Index">Transmisiones</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
        @RenderSection("Swiper", required: false)
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer>
        <section id="contactenos" class="bg-primary text-white text-center py-5">
            <div class="container">
                <div class="row mt-3">
                    <div class="col-md-6 col-lg-6 col-xl-6 mx-auto">
                        <h2 class="mb-4">Contactos</h2>
                        <p><i class="fas fa-phone me-3"></i> (+506) 2222-2222</p>
                        <p><i class="fas fa-phone me-3"></i> (+506) 2222-2223</p>
                        <p><i class="fas fa-envelope me-3"></i> info@autos.com</p>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-6">
                        <h2 class=" mb-4">
                            <i class="me-3"></i>Redes sociales
                        </h2>
                        <div>
                            <a href="#" class="me-4 text-reset">
                                <i class="fab fa-facebook-f fa-2x mx-3"></i>
                            </a>
                            <a href="#" class="me-4 text-reset">
                                <i class="fab fa-instagram fa-2x mx-3"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="~/js/main.js" asp-append-version="true"></script>
</body>
</html>
