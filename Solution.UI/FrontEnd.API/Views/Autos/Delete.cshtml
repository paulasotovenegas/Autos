@model FrontEnd.API.Models.Autos

@{ ViewData["Title"] = "Details"; }

<div class="container my-5">
    <div class="row centered-box">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <img src="@("~/Image/"+ Model.Imagen)" asp-append-version="true" class="img-fluid mb-2" />
                        </div>
                        <div class="col-md-4">
                            <h2><b>@Html.DisplayFor(model => model.Descripcion) @Html.DisplayFor(model => model.Descripcion) @Html.DisplayFor(model => model.Anio)</b></h2>
                            <h2><b></b>₡@Html.DisplayFor(model => model.Precio)</b></h2>
                            <table class="table table-striped">
                                <tr>
                                    <td><b>Kilometraje</b></td>
                                    <td>@Html.DisplayFor(model => model.Kilometraje)km</td>
                                </tr>
                                <tr>
                                    <td><b>Terminación de placa</b></td>
                                    <td>@Html.DisplayFor(model => model.TerminacionPlaca)</td>
                                </tr>
                                <tr>
                                    <td><b>Combustible</b></td>
                                    <td>@Html.DisplayFor(model => model.Combustible.Descripcion)</td>
                                </tr>
                                <tr>
                                    <td><b>Transmición</b></td>
                                    <td>@Html.DisplayFor(model => model.Transmision.Descripcion)</td>
                                </tr>
                                <tr>
                                    <td><b>Color</b></td>
                                    <td>@Html.DisplayFor(model => model.Color)</td>
                                </tr>
                                <tr>
                                    <td><b>Vendedor</b></td>
                                    <td>@Html.DisplayFor(model => model.User.Nombre)</td>
                                </tr>
                                <tr>
                                    <td><b>Contacto</b></td>
                                    <td>@Html.DisplayFor(model => model.User.PhoneNumber)</td>
                                </tr>
                                <tr>
                                    <td>
                                        <form asp-action="Delete">
                                            <input type="hidden" asp-for="Id" />
                                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                                            <a asp-action="Index">Back to List</a>
                                        </form>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


